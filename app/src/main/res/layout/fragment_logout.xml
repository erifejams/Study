<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/logout_app"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:fontFamily="@font/comfortaa_bold"
        android:inputType="textCapSentences"
        android:text="Exit from App"
        android:textSize="20sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282" />

    <Button
        android:id="@+id/logout_account"
        android:layout_width="275dp"
        android:layout_height="68dp"
        android:fontFamily="@font/comfortaa_bold"
        android:inputType="textCapSentences"
        android:text="Exit from Account"
        android:textSize="20sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout_app"
        app:layout_constraintVertical_bias="0.412" />

    <TextView
        android:id="@+id/logout_heading"
        android:layout_width="206dp"
        android:layout_height="44dp"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:fontFamily="@font/graduate"
        app:layout_constraintBottom_toTopOf="@+id/logout_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText" />
</androidx.constraintlayout.widget.ConstraintLayout>